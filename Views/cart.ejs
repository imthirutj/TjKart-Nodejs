<%- include ('Includes/head.ejs') %>
<link rel="stylesheet" href="/css/addProductForm.css">
<link rel="stylesheet" href="/css/cart.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<%- include ('Includes/Header.ejs') %>

<main id="cart" style="max-width:960px">
    <h1>Your Cart</h1>
    <div class="container-fluid">
      <div class="row align-items-start">
        <div class="col-12 col-sm-8 items">
          <!--1-->
<!-- heading -->

          <% for(var kt of kart) {
            for(var k of kt.KartProducts){
            %>
          <div class="cartItem row align-items-start">
            <div class="col-3 mb-2">
              <img class="w-100" src="https://icon-library.com/images/product-icon-png/product-icon-png-19.jpg" alt="art image">
            </div>
            <div class="col-5 mb-2">
              <h6 class=""><%= k.Name %></h6>
              <a href="/delete-kart/<%=k.Id %>">Delete</a>
              <p class="pl-1 mb-0"></p>
              <p class="pl-1 mb-0"></p>
            </div>
            <div class="col-2">
              <p class="cartItemQuantity p-1 text-center">Quantity<br><%= k.Quantity %></p>
            </div>
            <div class="col-2">
              <p id="cartItem1Price">Price <br>$<%= k.Price %></p>
            </div>
          </div>
          <hr>
          <% } %>
     
        </div>
        <div class="col-12 col-sm-4 p-3 proceed form">
          <div class="row m-0">
            <div class="col-sm-8 p-0">
              <h6>Subtotal</h6>
            </div>
            <div class="col-sm-4 p-0">
              <p id="subtotal">$ <%=kt.totalPrice%></p>
            </div>
          </div>
          <div class="row m-0">
            <div class="col-sm-8 p-0 ">
              <h6>Tax</h6>
            </div>
            <div class="col-sm-4 p-0">
             
              <p id="tax">$ <%=( (1/100)*kt.totalPrice).toFixed(2) %></p>
            </div>
          </div>
          <hr>
          <div class="row mx-0 mb-2">
            <div class="col-sm-8 p-0 d-inline">
              <h5>Total</h5>
            </div>
            <div class="col-sm-4 p-0">
              <p id="total">$ <%= ( kt.totalPrice + (1/100)*kt.totalPrice).toFixed(2) %></p>
            </div>
          </div>
          <a href="#"><button id="btn-checkout" class="shopnow"><span>Checkout</span></button></a>
        </div>
        <% } %>
      </div>
    </div>
    </div>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

